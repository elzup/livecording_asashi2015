body
  color red

rainbow-back()
  background-image linear-gradient(to top, red, orange, yellow, green, blue, purple)

rotate45()
  transform: rotateZ(45deg)

$keyframe-name = spin
@keyframes {$keyframe-name}
  0% 
    transform: rotateZ(0deg)
  100%
    transform: rotateZ(360deg)

.stop
  animation-name none !important

hyuga-spin()
  animation-name spin
  animation-duration 0.1s
  animation-iteration-count infinite

.miwa-rhombus
  margin 100px
  height 100px
  width 100px
  // background black
  rainbow-back()
  hyuga-spin()
