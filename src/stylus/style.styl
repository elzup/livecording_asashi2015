body
  color red

rainbow-back()
  background-image linear-gradient(to top, red, orange, yellow, green, blue, purple)

rotate45()
  transform: rotateZ(45deg)

$keyframe-name = spin
@keyframes {$keyframe-name}
  0% 
    transform: rotateZ(0deg)
  100%
    transform: rotateZ(360deg)

$keyframe-name = move-rail
@keyframes {$keyframe-name}
  0% 
    left: 100%
  100%
    left: -5em

.stop
  animation-name none !important

hyuga-spin()
  animation-name spin
  animation-duration 1s
  animation-iteration-count infinite

sushi-move()
  animation-name move-rail
  animation-duration 1s
  animation-iteration-count infinite
  transition: all 600ms cubic-bezier(0.68, -0.55, 0.265, 1.55);

.miwa-rhombus
  margin 100px
  height 100px
  width 100px
  // background black
  rainbow-back()
  hyuga-spin()
  // rotate45()

mover()
  position: relative
  text-shadow: 43px 4px 4px black, 86px 4px 4px black;
  left: 1200px
  padding 5px
  sushi-move()
  background white
  padding 5px
  font-size: 100px;
  border-radius: 50%;

.sushi-area
  background gray
  .metoroid
    mover()
  .sushi
    mover()
